        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav">
            <li class="nav-item">
              <%= link_to "Accueil", events_path, :class=>"nav-link" %>
            </li>
            <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to "Créer ton event", new_event_path, :class=>"nav-link" %>
            </li>
            <% else %>
            <% end %>
